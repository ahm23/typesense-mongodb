{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "./src",
    "esModuleInterop": true,
    "target": "esnext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "noImplicitAny": false,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*",
  ],
  "exclude": ["tests"]
}
